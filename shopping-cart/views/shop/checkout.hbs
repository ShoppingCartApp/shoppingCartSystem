<main class="page payment-page">
    <section class="payment-form dark">
        <div class="container">
            <div class="block-heading">
                <h2>Payment</h2>
                <p><strong>Hi {{user.username}}</strong></p>
            </div>
            <form>
                <div class="products">
                    <h3 class="title">Checkout</h3>
                    {{#each items}}
                    <div class="item">
                        <span class="price">${{this.product_price}}</span>
                        <p class="item-name">{{this.product_name}} <span class="text-muted">x {{this.product_qty}}</span></p>
                    </div>
                    {{/each}}
                    <div class="total">Total<span class="price">${{totalPrice}}</span></div>
                </div>
                <div class="card-details">
                    <h3 class="title">Credit Card Details</h3>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="card-holder"> First Name</label>
                            <input id="card-holder-fname" type="text" class="form-control" placeholder=" First Name"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="card-holder"> Last Name</label>
                            <input id="card-holder-lname" type="text" class="form-control" placeholder=" Last Name"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="card-holder"> Email</label>
                            <input id="card-holder-email" type="text" class="form-control" placeholder="Email"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="card-holder"> Phone </label>
                            <input id="card-holder-phone" type="text" class="form-control" placeholder="Phone Number"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-7">
                            <label for="card-holder">Address</label>
                            <input id="card-holder-address" type="text" class="form-control" placeholder="Address"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-7">
                            <label for="card-holder">Card Holder</label>
                            <input id="card-holder" type="text" class="form-control" placeholder="Card Holder"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="">Expiration Date</label>
                            <div class="input-group expiration-date">
                                <input id="MM" type="text" class="form-control" placeholder="MM" aria-label="MM"
                                    aria-describedby="basic-addon1">
                                <span class="date-separator">/</span>
                                <input id="YY" type="text" class="form-control" placeholder="YY" aria-label="YY"
                                    aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="form-group col-sm-8">
                            <label for="card-number">Card Number</label>
                            <input id="card-number" type="text" class="form-control" placeholder="Card Number"
                                aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-4">
                            <label for="cvc">CVC</label>
                            <input id="cvc" type="text" class="form-control" placeholder="CVC" aria-label="Card Holder"
                                aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-12">
                            <button id="proceed" type="button" class="btn btn-primary btn-block">Proceed</button>
                            <button onclick="window.location.href = '/shoppingcart';" type="button"
                                class="btn btn-danger btn-block">Back to shopping cart</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>
<script src="/javascript/checkout.js"></script>



