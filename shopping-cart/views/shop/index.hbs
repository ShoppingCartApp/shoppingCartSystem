
<div class="jumbotron">
    <hr class="my-4">
    <div class="container">
        <div class="row row-content">
            <div class="col">
                <div id="mycarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" id="carousel-img"
                                src="{{products.[1].imagePath}}"
                                alt="pic">
                            <div class="carousel-caption d-none d-md-block">
                                <h2>
                                    <font color="white">{{products.[1].name}}</font> <span class="badge badge-danger">HOT</span>
                                    <span class="badge badge-pill badge-secondary">Free</span>
                                </h2>
                                <p class="d-none d-sm-block">
                                    <font color="white">Add something here......
                                </p>
                                </font>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" id="carousel-img"
                                src="{{products.[0].imagePath}}"
                                alt="pic">
                            <div class="carousel-caption d-none d-md-block">
                                <h2>
                                    <font color="white">{{products.[0].name}} </font><span
                                        class="badge badge-danger">SPECIAL</span> <span
                                        class="badge badge-pill badge-secondary">$79.99</span>
                                </h2>
                                <p class="d-none d-sm-block">
                                    <font color="white">Add something here......
                                </p>
                                </font>
                                </p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" id="carousel-img"
                                src="{{products.[2].imagePath}}"
                                alt="pic">
                            <div class="carousel-caption d-none d-md-block">
                                <h2>
                                    <font color="white">{{products.[2].name}}</font> <span
                                        class="badge badge-danger">NEW</span> <span
                                        class="badge badge-pill badge-secondary">$79.99</span>
                                </h2>
                                <p class="d-none d-sm-block">
                                    <font color="white">Add something here......
                                </p>
                                </font>
                                </p>
                            </div>
                        </div>
                    </div>
                    <ol class="carousel-indicators">
                        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                        <li data-target="#mycarousel" data-slide-to="2"></li>
                    </ol>
                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        
            {{#each products}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" class="img-responsive" alt="monster hunter" height="280" width="220">
                    <div class="caption">
                        <a class="nav-link" href="/product/{{this.id}}">
                            <h4>{{this.name}}</h4>
                        </a>
                        <div class="clearfix">
                            <div class="price">${{this.price}}</div>
                            <p>
                                <a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                <a href="/product/{{this.id}}" id="details" class="btn btn-primary" role="button">Details</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        
    </div>
</div>
